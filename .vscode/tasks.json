{
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker: build (Makefile)",
      "type": "shell",
      "command": "make",
      "args": [
        "build",
        "IMAGE_NAME=${input:imageName}",
        "IMAGE_TAG=${input:imageTag}",
        "DOCKER_NAMESPACE=${input:namespace}",
        "GHCR_NAMESPACE=${input:namespace}"
      ],
      "problemMatcher": []
    },
    {
      "label": "docker: build (direct)",
      "type": "shell",
      "command": "docker",
      "args": [
        "build",
        "-f",
        "src/Dockerfile",
        "-t",
        "${input:namespace}/${input:imageName}:${input:imageTag}",
        "-t",
        "${input:namespace}/${input:imageName}:latest",
        "-t",
        "ghcr.io/${input:namespace}/${input:imageName}:${input:imageTag}",
        "-t",
        "ghcr.io/${input:namespace}/${input:imageName}:latest",
        "."
      ],
      "problemMatcher": []
    },
    {
      "label": "docker: publish (hub)",
      "type": "shell",
      "command": "docker",
      "args": [
        "push",
        "${input:namespace}/${input:imageName}:${input:imageTag}"
      ],
      "problemMatcher": []
    },
    {
      "label": "docker: publish latest (hub)",
      "type": "shell",
      "command": "docker",
      "args": ["push", "${input:namespace}/${input:imageName}:latest"],
      "problemMatcher": []
    },
    {
      "label": "docker: publish (ghcr)",
      "type": "shell",
      "command": "docker",
      "args": [
        "push",
        "ghcr.io/${input:namespace}/${input:imageName}:${input:imageTag}"
      ],
      "problemMatcher": []
    },
    {
      "label": "docker: publish latest (ghcr)",
      "type": "shell",
      "command": "docker",
      "args": ["push", "ghcr.io/${input:namespace}/${input:imageName}:latest"],
      "problemMatcher": []
    },
    {
      "label": "docker: publish (Makefile)",
      "type": "shell",
      "command": "make",
      "args": [
        "publish",
        "IMAGE_NAME=${input:imageName}",
        "IMAGE_TAG=${input:imageTag}",
        "DOCKER_NAMESPACE=${input:namespace}",
        "GHCR_NAMESPACE=${input:namespace}"
      ],
      "problemMatcher": []
    },
    {
      "label": "docker: run",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "${workspaceFolder}:/work",
        "${input:namespace}/${input:imageName}:${input:imageTag}"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "namespace",
      "description": "Docker Hub / GHCR namespace (owner or org)",
      "type": "pickString",
      "options": ["lbenicio"],
      "default": "lbenicio"
    },
    {
      "id": "imageName",
      "description": "Docker image name",
      "type": "pickString",
      "options": ["docker-latex"],
      "default": "docker-latex"
    },
    {
      "id": "imageTag",
      "description": "Docker image tag",
      "type": "pickString",
      "options": ["latest", "dev"],
      "default": "latest"
    }
  ]
}
